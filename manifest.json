{
  "manifest_version": 2,
  "name": "HDrezka extension",
  "version": "0.1.0",
  "permissions": [
    "http://hdrezka.ag/*",
    "activeTab",
    "tabs",
    "storage",
    "management"
  ],
  "content_scripts": [
    {
      "js": [
        "js/dist/jquery.min.js",
        "js/content.js"
      ],
      "matches": [
        "http://hdrezka.ag/*"
      ]
    }
  ],
  "browser_action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "48": "./img/hdrezka.png"
  }
}
